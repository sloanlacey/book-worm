{{!-- Nav bar/jumbotron --}}
<div class='jumbotron'>
    <div class='row'>
        <h3 style="margin-top: 10px; color: #8C3027;">Book Worm.</h3>
    </div>
</div>

<div class='container-lg'>
    <br>
    <div class='container mx-auto burgersContainer'>
        <div class='row mx-auto'>
            <div class='col-md-4 border border-dark border-3 mx-auto ready mt-0'>
                <h2 id='burgOfDay'>Books I want to read:</h2>
                <div class='container'>
                    <ul>
                        {{#each books}}
                            {{#unless have_read}}
                                <li>
                                    {{book_name}}
                                    <button type='button' class='chomp-btn change-status btn btn-sm' data-id='{{id}}'>Mark as 'read'</button>
                                </li>
                                <br>
                            {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
            <div class='col-md-4 border border-dark border-3 mx-auto devoured mt-0'>
                <h2 id='devoured'>Books I have read:</h2>
                <div class='container'>
                    <ul>
                        {{#each books}}
                            {{#if have_read}}
                                <li>
                                    {{book_name}}
                                </li>
                                <br>
                            {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
    
    <br>
    <br>
    
    <div class='col-md-10 border border-dark border-3 new'>
        <div class='row mx-auto' style='justify-content: center; text-align: center;'>
            <h2 style='font-weight: bold;'>Add a new book to read:</h2>
        </div>
        <br>
        <form class='newBurgerForm'>
            <div class='form-group row mx-auto' style='justify-content: center; text-align: center;'>
                <div class='col-sm-2'>
                    <label for='newBurgerName' class='col-form-label'>New Book:</label>
                </div>
                <div class='col-sm-6'>
                    <input type='text' class='form-control' id='newBurgerName' placeholder="Search for a book.">
                </div>
            </div>
            <br>
            <div class='form-group row mx-auto' style='justify-content: center; text-align: center;'>
                <div class='col-sm-10'>
                    <button type='submit' class='orderUp btn'>Search</button>
                </div>
            </div>
            <br>
        </form>
    </div>
    <br>
    <br>
</div>